{
  // 任意の名称
  "name": "api-container",
  // docker-compose.ymlのservicesで設定したサービス名
  "service": "api",
  // 生成したコンテナのワークスペースのフォルダの場所
  "workspaceFolder": "/workspace",
  // docker-compose.ymlの場所、相対pathが使用可能
  "dockerComposeFile": "../../docker-compose.yml",
  "customizations": {
    "vscode": {
      // VSCodeの拡張機能（Extensions）を設定可能
      // 名称の確認は、EXTENSIONS:MARKETPLACEで検索した機能の右下「More Info→Identifier」に記載あり
      "extensions": [
        "vscjava.vscode-spring-initializr",
        "pivotal.vscode-spring-boot",
        "pivotal.vscode-boot-dev-pack",
        "vscjava.vscode-spring-boot-dashboard",
        "vscjava.vscode-java-pack"
      ]
    }
  }
}
